<SCENE>

    <INITIALS>
        <frustum near="0.1" far="500.0"/>           <!-- frustum planes-->
        <translate x="0.0" y="0.0" z="0.0" />    <!-- initial translate -->
        <rotation axis="z" angle="0.0" />           <!-- initial rotation 3 -->
        <rotation axis="y" angle="0.0" />           <!-- initial rotation 2 -->
        <rotation axis="x" angle="0.0" />           <!-- initial rotation 1 -->
        <scale sx="1.0" sy="1.0" sz="1.0" />        <!-- initial scaling -->
        <reference length="5.0" />                  <!-- axis length; "0" means no axis-->
    </INITIALS>


    <ILUMINATION>
        <ambient r="0.1" g="0.1" b="0.1" a="1.0" />        <!-- global ambient -->
        <doubleside value="0" />                          <!-- double or single side illum. -->
        <background r="0.0" g="0.0" b="0.0" a="1.0" />     <!-- background color -->
    </ILUMINATION>


    <LIGHTS>
        <LIGHT id="light0">                                      <!-- light identifier -->
            <enable value ="1" />                           <!-- enable/disable -->
            <position x="2" y="3" z="3" w="1" />            <!-- light position -->
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />       <!-- ambient component --> <!-- default -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />     <!-- diffuse component -->
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />    <!-- specular component --> <!-- default -->
        </LIGHT>

        <LIGHT id="light1">                                      <!-- light identifier -->
            <enable value ="1" />                           <!-- enable/disable -->
            <position x="3" y="3" z="3" w="1" />            <!-- light position -->
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />       <!-- ambient component --> <!-- default -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />     <!-- diffuse component -->
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />    <!-- specular component --> <!-- default -->
        </LIGHT>

        <!-- NOTE: this block "LIGHT" must be repeated as necessary with different "id" -->

    </LIGHTS>


    <TEXTURES>
        <TEXTURE id="tex1">
            <file path="resources/1.txt" />                             <!-- path to file -->
            <amplif_factor s="0.5" t="2.0" />                <!-- x/s, y/t -->
        </TEXTURE>

        <TEXTURE id="tex2">
            <file path="resources/2.txt" />                             <!-- path to file -->
            <amplif_factor s="0.5" t="2.0" />                <!-- x/s, y/t -->
        </TEXTURE>

        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->

    </TEXTURES>


    <MATERIALS>

        <MATERIAL id="mat1">                   <!-- default appearance -->
            <shininess value="10.0" />
            <specular r="0.2" g="0.4" b="0.8" a="1.0" />        <!-- specular reflection -->
            <diffuse r="0.2" g="0.4" b="0.8" a="1.0" />         <!-- diffuse reflection -->
            <ambient r="0.2" g="0.4" b="0.8" a="1.0" />         <!-- ambient reflection -->
            <emission r="0.2" g="0.4" b="0.8" a="1.0" />        <!-- emission component -->
        </MATERIAL>

        <MATERIAL id="mat2">                   <!-- default appearance -->
            <shininess value="10.0" />
            <specular r="0.2" g="0.4" b="0.8" a="1.0" />        <!-- specular reflection -->
            <diffuse r="0.2" g="0.4" b="0.8" a="1.0" />         <!-- diffuse reflection -->
            <ambient r="0.2" g="0.4" b="0.8" a="1.0" />         <!-- ambient reflection -->
            <emission r="0.2" g="0.4" b="0.8" a="1.0" />        <!-- emission component -->
        </MATERIAL>

        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material requires a distinct "id" -->

    </MATERIALS>


    <LEAVES>
        <!-- next lines define nodes of type leaf; they may be repeated, in any order, as necessary -->
        <LEAF id="P1" type="rectangle" args="-0.5 0.5 -0.5 0.5" />      <!-- 2D coordinates for left-top and right-bottom vertices. -->
        <LEAF id="P2" type="cylinder" args="ff ff ff ii ii" />    <!-- height, bottom radius, top radius, sections along height, parts per section -->
        <LEAF id="P3" type="sphere" args="ff ii ii" />            <!-- radius, parts along radius, parts per section -->
        <LEAF id="P4" type="triangle" args="ff ff ff  ff ff ff  ff ff ff" />   <!-- coordinates of each vertex -->
    </LEAVES>


    <NODES>

        <ROOT id="ss" />     <!-- identifier of root node of the scene graph; this node     -->
        <!--   must be defined in one of the following NODE declarations -->

        <NODE id="ss">       <!--   defines one intermediate node; may be repeated as necessary -->

            <!-- next two lines are mandatory -->
            <MATERIAL id="ss" />      <!-- declared material superimposes the material received from parent node -->
            <!-- id="null" maintains material from parent node        -->
            <TEXTURE id="ss" />       <!-- declared texture superimposes the texture received from parent node -->
            <!-- id="null" maintains texture from parent node       -->
            <!-- id="clear" clears texture declaration received from parent node      -->

            <!-- geom. transf. are optional and may be repeated, in any order, as necessary -->
            <TRANSLATION x="ff" y="ff" z="ff" />
            <ROTATION axis="cc" angle="ff" />
            <SCALE sx="ff" sy="ff" sz="ff" />

            <!-- declaring descendents, ate least one node or one leaf must be present -->
            <DESCENDANTS>
                <DESCENDANT id="ss" />       <!-- "ss" is the identifier of a node or of leaf; -->
                <!--     may be repeatad as necessary. It can refer an -->
                <!--      identifier of another node, later defined in the lsx file. -->
            </DESCENDANTS>

        </NODE>

    </NODES>

</SCENE>